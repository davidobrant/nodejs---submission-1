<%- include("./include/header.ejs"); -%>

<h1>Home</h1>
<P> <%= startingContent %> </P>

<% if (posts.length > 0) { %>
    <% posts.forEach(post => { %>

    <h1><%= post.title %></h1>
    <p><%= post.content.substring(0,100) + '... ' %><a href="/posts/ <%= post.title %>">Read more</a></p>

    <% }) %>
<% } else { %>
    <p>No current posts</p>
<% } %>

<%- include("./include/footer.ejs"); -%>
